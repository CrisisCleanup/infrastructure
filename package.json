  "types": "dist/index.d.ts",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/charts/crisiscleanup",
      "packages/config",
      "packages/k8s/construct/api",
      "packages/k8s/construct/component",
      "packages/stacks/api"
    ],
    "nohoist": [
      "k8s.construct.component/@types/debug",
      "k8s.construct.component/@types/debug/*",
      "k8s.construct.component/debug",
      "k8s.construct.component/debug/*",
      "k8s.construct.component/defu",
      "k8s.construct.component/defu/*",
      "k8s.construct.component/js-yaml",
      "k8s.construct.component/js-yaml/*",
      "k8s.construct.api/@crisiscleanup/config",
      "k8s.construct.api/@crisiscleanup/config/*",
      "k8s.construct.api/@types/debug",
      "k8s.construct.api/@types/debug/*",
      "k8s.construct.api/debug",
      "k8s.construct.api/debug/*",
      "k8s.construct.api/defu",
      "k8s.construct.api/defu/*"
    ]
  },
  "packageManager": "pnpm@8.6.9",
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "preserveUnused": true
  },
  "lint-staged": {
    "*.{ts,tsx,mts,cts,js,jsx,jts,jts}": [
      "pnpm exec eslint --cache --fix --no-error-on-unmatched-pattern"
    ],
    "*.{yaml,yml}": [
      "pnpm exec prettier --write"
    ]
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
